<Window x:Class="Schrauben_Schutte.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schrauben_Schutte"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ViewModel x:Key="vm1"></local:ViewModel>
    </Window.Resources>
    <StackPanel DataContext="{StaticResource vm1}">
        <Label Template="{StaticResource header}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
        <ListView Name="lv1" Grid.Column="0">
            <ListView.DataContext>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Name="lblAnz1" Content="{Binding }"></Label>
                </Grid>
            </ListView.DataContext>

            <Grid Grid.Column="1">
            </Grid>
        </ListView>
    </StackPanel>
</Window>
