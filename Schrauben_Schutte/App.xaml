<Application x:Class="Schrauben_Schutte.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Schrauben_Schutte"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="header">
            <Label x:Name="lbl_header" Width="800" Padding="15" Content="Schrauben Schutte" FontFamily="Arial" FontSize="45px" FontWeight="Bold"
                   HorizontalContentAlignment="Center" Background="#FF796464" Opacity="0.7"></Label>
        </ControlTemplate>

        <ControlTemplate x:Key="header2">
            <Label HorizontalAlignment="Center" x:Name="lbl_header2" Width="420" Padding="15" Margin="0,10,10,0"
                   Content="Informationen:" FontFamily="Arial" FontSize="22px" FontWeight="Bold"
                   HorizontalContentAlignment="Center" Background="LightBlue" Opacity="0.5"></Label>
        </ControlTemplate>
    </Application.Resources>
</Application>
